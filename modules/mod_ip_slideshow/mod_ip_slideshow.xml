<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="site">
	<name>IP Slideshow</name>
	<author>The Thinkery, LLC</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.2</version>
	<description>IP Slideshow module</description>
	<files>
		<filename module="mod_ip_slideshow">mod_ip_slideshow.php</filename>
		<filename>CHANGELOG.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl/</folder>
        <folder>assets/</folder>
	</files>

    <languages>
        <language tag="en-GB">language/en-GB.mod_ip_slideshow.ini</language>
    </languages>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_iproperty/models/fields">                
                <field name="" type="header" default="MOD_IP_IPROPERTY_SETTINGS" label="" description="" />
                <field name="cat_id" type="category" default="0" label="MOD_IP_CATEGORY" description="MOD_IP_CATEGORY_DESC" />
                <field name="cat_subcats" type="radio" default="0" label="MOD_IP_SUBCATS" description="MOD_IP_SUBCATS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="prop_stype" type="stypes" default="0" label="MOD_IP_STYPE" description="MOD_IP_STYPE_DESC" />
                <field name="count" type="text" default="5" label="MOD_IP_COUNT" description="MOD_IP_COUNT_DESC" />
                <field name="ordering" type="list" default="5" label="MOD_IP_ORDER" description="MOD_IP_ORDER_DESC">
                    <option value="1">MOD_IP_PRICE_ASC</option>
                    <option value="2">MOD_IP_PRICE_DESC</option>
                    <option value="3">MOD_IP_TITLE_ASC</option>
                    <option value="4">MOD_IP_TITLE_DESC</option>
                    <option value="5">MOD_IP_RANDOM</option>
                    <option value="6">MOD_IP_NEWEST_FIRST</option>
                </field>
                <field name="preview_count" type="text" default="250" label="MOD_IP_CHARACTERS" description="MOD_IP_CHARACTERS_DESC" />
                <field name="clean_desc" type="radio" default="0" label="MOD_IP_CLEANDESC" description="MOD_IP_CLEANDESC_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="showPrice" type="radio" default="1" label="MOD_IP_SHOWPRICE" description="MOD_IP_SHOWPRICE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="showFeatured" type="radio" default="0" label="MOD_IP_SHOWFEATURED" description="MOD_IP_SHOWFEATURED_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="" type="header" default="MOD_IP_SLIDESHOW_SETTINGS" label="" description="" />
                <field name="width" type="text" default="430" label="MOD_IP_WIDTH" description="MOD_IP_WIDTH_DESC" />
                <field name="height" type="text" default="300" label="MOD_IP_HEIGHT" description="MOD_IP_HEIGHT_DESC" />
                <field name="margin_left" type="text" default="10" label="MOD_IP_MARGIN_LEFT" description="MOD_IP_MARGIN_LEFT_DESC" />
                <field name="margin_top" type="text" default="5" label="MOD_IP_MARGIN_TOP" description="MOD_IP_MARGIN_TOP_DESC" />
                <field name="showCaption" type="radio" default="1" label="MOD_IP_CAPTIONS" description="MOD_IP_CAPTIONS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="showThumbnails" type="radio" default="1" label="MOD_IP_SHOWTHUMBS" description="MOD_IP_SHOWTHUMBS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="showController" type="radio" default="1" label="MOD_IP_SHOWCONTROLLER" description="MOD_IP_SHOWCONTROLLER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="loopShow" type="radio" default="1" label="MOD_IP_LOOPSHOW" description="MOD_IP_LOOPSHOW_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="imageDuration" type="text" default="9000" label="MOD_IP_IMGDURATION" description="MOD_IP_IMGDURATION_DESC" />
                <field name="transDuration" type="text" default="2000" label="MOD_IP_TRANSDURATION" description="MOD_IP_TRANSDURATION_DESC" />
                <field name="transType" type="list" default="kenburns" label="MOD_IP_TRANSTYPE" description="MOD_IP_TRANSTYPE_DESC">
                    <option value="none">MOD_IP_NONE</option>
                    <option value="flash">MOD_IP_FLASH</option>
                    <option value="kenburns">MOD_IP_KEN_BURNS</option>
                    <option value="push">MOD_IP_PUSHING</option>
                    <option value="fold">MOD_IP_FOLD</option>
                </field>
                <field name="hide_mod" type="radio" default="1" label="MOD_IP_HIDEMOD" description="MOD_IP_HIDEMOD_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
                    default=""
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
        </fields>
    </config>
</extension>