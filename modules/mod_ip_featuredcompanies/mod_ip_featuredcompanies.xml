<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="site">
    <name>IP Featured Companies</name>
    <author>The Thinkery</author>
    <creationDate>March 2013</creationDate>
    <copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@thethinkery.net</authorEmail>
    <authorUrl>www.thethinkery.net</authorUrl>
    <version>2.0.2</version>
    <description>Featured companies table layout or vertical layout view.</description>
    <files>
        <filename module="mod_ip_featuredcompanies">mod_ip_featuredcompanies.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl/</folder>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB.mod_ip_featuredcompanies.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_iproperty/models/fields">
                <field name="city" type="city" default="" label="MOD_IP_FEATUREDCOMPANIES_CITY" description="MOD_IP_FEATUREDCOMPANIES_CITY_DESC" />
                <field name="" type="header" default="MOD_IP_FEATUREDCOMPANIES_DISPLAY" label="" description="" />
                <field name="include_ipcss" type="radio" default="1" label="MOD_IP_FEATUREDCOMPANIES_INCLUDE_IPCSS" description="MOD_IP_FEATUREDCOMPANIES_INCLUDE_IPCSS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="thumb_width" type="text" default="150" label="MOD_IP_FEATUREDCOMPANIES_THMB_WIDTH" description="MOD_IP_FEATUREDCOMPANIES_THMB_WIDTH_DESC" />
                <field name="thumb_height" type="text" default="100" label="MOD_IP_FEATUREDCOMPANIES_THMB_HEIGHT" description="MOD_IP_FEATUREDCOMPANIES_THMB_HEIGHT_DESC" />
                <field name="border_color" type="text" default="#fff" label="MOD_IP_FEATUREDCOMPANIES_THMB_BORDER" description="" />
                <field name="" type="header" default="MOD_IP_FEATUREDCOMPANIES_LAYOUT" label="" description="" />
                <field name="iplayout" type="list" default="1" label="MOD_IP_FEATUREDCOMPANIES_LAYOUT" description="MOD_IP_FEATUREDCOMPANIES_LAYOUT_DESC">
                    <option value="1">MOD_IP_FEATUREDCOMPANIES_HORIZONTAL</option>
                    <option value="2">MOD_IP_FEATUREDCOMPANIES_VERTICAL</option>
                </field>
                <field name="columns" type="list" default="3" label="MOD_IP_FEATUREDCOMPANIES_COLUMNS" description="MOD_IP_FEATUREDCOMPANIES_COLUMNS_DESC">
                    <option value="1">J1</option>
                    <option value="2">J2</option>
                    <option value="3">J3</option>
                    <option value="4">J4</option>
                    <option value="5">J5</option>
                </field>
                <field name="preview_count" type="text" default="200" label="MOD_IP_FEATUREDCOMPANIES_CHARACTERS" description="MOD_IP_FEATUREDCOMPANIES_CHARACTERS_DESC" />
                <field name="" type="header" default="MOD_IP_FEATUREDCOMPANIES_OPTIONS" label="" description="" />
                <field name="count" type="text" default="5" label="MOD_IP_FEATUREDCOMPANIES_COUNT" description="MOD_IP_FEATUREDCOMPANIES_COUNT_DESC" />
                <field name="ordering" type="list" default="1" label="MOD_IP_FEATUREDCOMPANIES_ORDER" description="MOD_IP_FEATUREDCOMPANIES_ORDER_DESC">
                    <option value="1">MOD_IP_FEATUREDCOMPANIES_NAME</option>
                    <option value="2">MOD_IP_FEATUREDCOMPANIES_ORDERING</option>
                    <option value="5">MOD_IP_FEATUREDCOMPANIES_RANDOM</option>
                </field>
                <field name="show_desc" type="radio" default="1" label="MOD_IP_FEATUREDCOMPANIES_SHOWDESC" description="MOD_IP_FEATUREDCOMPANIES_SHOWDESC_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="clean_desc" type="radio" default="0" label="MOD_IP_FEATUREDCOMPANIES_CLEANDESC" description="MOD_IP_FEATUREDCOMPANIES_CLEANDESC_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="hide_mod" type="radio" default="1" label="MOD_IP_FEATUREDCOMPANIES_HIDEMOD" description="MOD_IP_FEATUREDCOMPANIES_HIDEMOD_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field name="moduleclass_sfx" type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid">
                    <option
                        value="itemid"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
