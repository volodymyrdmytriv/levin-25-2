        <plugin folder="plugins/ip_native/onAfterRenderFavorites" plugin="plg_ip_favoritetools" group="iproperty" />
        <plugin folder="plugins/ip_native/onAfterRenderForms" plugin="plg_ip_education" group="iproperty" />
