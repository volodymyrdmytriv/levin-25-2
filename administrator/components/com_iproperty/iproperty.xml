        <plugin folder="plugins/ip_native/onAfterRenderProperty" plugin="plg_ip_fblike" group="iproperty" />
        <plugin folder="plugins/ip_native/onAfterRenderProperty" plugin="plg_ip_googleplusone" group="iproperty" />
