<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="iproperty" method="upgrade">
	<name>Iproperty - AdWord Conversion Tracker</name>
	<author>The Thinkery</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2012 The Thinkery. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.2</version>
	<description>Adds Google AdWords Conversion Tracker code to IP form submission. Examine the code snippet prepared for you by Google to get the right values for the options.</description>
	<files>
		<filename plugin="adwordconvert">adwordconvert.php</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_adwordconvert.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="conv_id" type="text" default="" label="PLG_IP_GC_ID_LABEL" description="PLG_IP_GC_ID_DESC" />
                <field name="conv_lang" type="text" default="en_US" label="PLG_IP_GC_LANGUAGE_LABEL" description="PLG_IP_GC_LANGUAGE_DESC" />
                <field name="conv_format" type="text" default="3" label="PLG_IP_GC_FORMAT_LABEL" description="PLG_IP_GC_FORMAT_DESC" />
                <field name="conv_color" type="text" default="ffffff" label="PLG_IP_GC_COLOR_LABEL" description="PLG_IP_GC_COLOR_DESC" />
                <field name="conv_label" type="text" default="Default" label="PLG_IP_GC_LABEL" description="PLG_IP_GC_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
