<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="iproperty" method="upgrade">
	<name>Iproperty - Gallery Plugin (Form Position)</name>
	<author>The Thinkery</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.2</version>
	<description>Gallery plugin (Form Position) for Intellectual Property. Uses optional slimbox javascript class by Christophe Beyls.</description>
	<files>
		<filename plugin="galleryform">galleryform.php</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_galleryform.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Gallery" label="PLG_IP_GALLERY_TABTITLE_LABEL" description="PLG_IP_GALLERY_TABTITLE_DESC" />
                <field name="before" type="radio" default="0" label="PLG_IP_GALLERY_BEFORE_LABEL" description="PLG_IP_GALLERY_BEFORE_DESC">
				  <option value="0">JNO</option>
				  <option value="1">JYES</option>
				</field>
                <field name="columns" type="text" default="4" label="PLG_IP_GALLERY_COLUMNS_LABEL" description="PLG_IP_GALLERY_COLUMNS_DESC" />
                <field name="maximgs" type="integer" default="0" first="0" last="25" step="1" label="PLG_IP_GALLERY_MAXIMGS_LABEL" description="PLG_IP_GALLERY_MAXIMGS_DESC" />
                <field name="thumb_width" type="text" default="200" label="PLG_IP_GALLERY_TWIDTH_LABEL" description="PLG_IP_GALLERY_TWIDTH_DESC" />
                <field name="thumb_height" type="text" default="120" label="PLG_IP_GALLERY_THEIGHT_LABEL" description="PLG_IP_GALLERY_THEIGHT_DESC" />
                <field name="slimbox" type="radio" default="1" label="PLG_IP_GALLERY_SLIMBOX_LABEL" description="PLG_IP_GALLERY_SLIMBOX_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>