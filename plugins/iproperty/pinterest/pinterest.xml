<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="iproperty" method="upgrade">
	<name>Iproperty - Pinterest</name>
	<author>The Thinkery</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.2</version>
	<description>Show Pinterest Button.</description>
	<files>
		<filename plugin="pinterest">pinterest.php</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_pinterest.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="defaultimg" type="text" default="" label="PLG_IP_PINTEREST_DEFIMG" description="PLG_IP_PINTEREST_DEFIMG_DESC" />
                <field name="topmargin" type="text" default="50" label="PLG_IP_PINTEREST_TOPMARGIN" description="PLG_IP_PINTEREST_TOPMARGIN_DESC" />
                <field name="rightmargin" type="text" default="10" label="PLG_IP_PINTEREST_RIGHTMARGIN" description="PLG_IP_PINTEREST_RIGHTMARGIN_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>