<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="iproperty" method="upgrade">
    <name>Iproperty - Facebook Comment Plugin (Form Position)</name>
    <author>The Thinkery</author>
    <creationDate>March 2013</creationDate>
    <copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@thethinkery.net</authorEmail>
    <authorUrl>www.thethinkery.net</authorUrl>
    <version>2.0.2</version>
    <description>Facebook Comment plugin (Form Position).</description>
    <files>
        <filename plugin="fbcomment">fbcomment.php</filename>
    </files>
    <languages>
       <language tag="en-GB">en-GB.plg_iproperty_fbcomment.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Comments" label="PLG_IP_FBCOMMENT_TABTITLE_LABEL" description="PLG_IP_FBCOMMENT_TABTITLE_DESC" />
				<field name="before" type="radio" default="0" label="PLG_IP_FBCOMMENT_BEFORE_LABEL" description="PLG_IP_FBCOMMENT_BEFORE_DESC">
				  <option value="0">JNO</option>
				  <option value="1">JYES</option>
				</field>
                <field name="width" type="text" default="600" label="PLG_IP_FBCOMMENT_WIDTH_LABEL" description="PLG_IP_FBCOMMENT_WIDTH_DESC" />
                <field name="number" type="text" default="5" label="PLG_IP_FBCOMMENT_NUMBER_LABEL" description="PLG_IP_FBCOMMENT_NUMBER_DESC" />
                <field name="debug" type="radio" default="0" label="PLG_IP_FBCOMMENT_SCHEME_LABEL" description="PLG_IP_FBCOMMENT_SCHEME_DESC">
                    <option value="0">PLG_IP_FBCOMMENT_LIGHT</option>
                    <option value="1">PLG_IP_FBCOMMENT_DARK</option>
                </field>
                <field name="moderator" type="text" default="" label="PLG_IP_FBCOMMENT_MODERATOR" description="PLG_IP_FBCOMMENT_MODERATOR_DESC" />
                <field name="app_id" type="text" default="" label="PLG_IP_FBCOMMENT_APPID" description="PLG_IP_FBCOMMENT_APPID_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
