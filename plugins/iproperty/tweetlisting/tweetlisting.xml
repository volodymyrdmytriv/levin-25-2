<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="iproperty" method="upgrade">
	<name>Iproperty - Twitter / Tweet New Listing</name>
	<author>The Thinkery</author>
	<creationDate>March 2013</creationDate>
	<copyright>Copyright (C) 2013 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>2.0.2</version>
	<description>Intellectual Property Tweet New Property. Register your IProperty website as an Application to obtain your OAuth keys. You can register the site and obtain keys here: https://dev.twitter.com/apps/new</description>
	<files>
		<filename plugin="tweetlisting">tweetlisting.php</filename>
        <folder>assets</folder>
	</files>	
	<languages>
	   <language tag="en-GB">en-GB.plg_iproperty_tweetlisting.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="consumer" type="text" default="" label="PLG_IP_TWEETLISTING_CONSUMER_KEY" description="PLG_IP_TWEETLISTING_CONSUMER_KEY_DESC" />
                <field name="csecret" type="text" default="" label="PLG_IP_TWEETLISTING_CONSUMER_SECRET" description="PLG_IP_TWEETLISTING_CONSUMER_SECRET_DESC" />
                <field name="token" type="text" default="" label="PLG_IP_TWEETLISTING_ACCESS_TOKEN" description="PLG_IP_TWEETLISTING_ACCESS_TOKEN_DESC" />
                <field name="asecret" type="text" default="" label="PLG_IP_TWEETLISTING_TOKEN_SECRET" description="PLG_IP_TWEETLISTING_TOKEN_SECRET_DESC" />
                <field name="showprice" type="radio" default="0" label="PLG_IP_TWEETLISTING_SHOW_PRICE" description="PLG_IP_TWEETLISTING_TWEET_SHOW_PRICE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="tweetnew" type="radio" default="0" label="PLG_IP_TWEETLISTING_TWEET_NEW" description="PLG_IP_TWEETLISTING_TWEET_NEW_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="tweetupdate" type="radio" default="0" label="PLG_IP_TWEETLISTING_TWEET_UPDATE" description="PLG_IP_TWEETLISTING_TWEET_UPDATE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="geocode" type="radio" default="0" label="PLG_IP_TWEETLISTING_GEOCODE" description="PLG_IP_TWEETLISTING_GEOCODE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field type="spacer" name="" class="text" label="PLG_IP_TWEETLISTING_BITLYLABEL" />
                <field name="bitlyuser" type="text" default="" label="PLG_IP_TWEETLISTING_BITUSER" description="PLG_IP_TWEETLISTING_BITUSER_DESC" />
                <field name="bitlykey" type="text" default="" label="PLG_IP_TWEETLISTING_BITKEY" description="PLG_IP_TWEETLISTING_BITKEY_DESC" />
             </fieldset>
         </fields>
     </config>
</extension>